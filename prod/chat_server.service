[Unit]
Description=Chat Server Gunicorn daemon
After=network.target

[Service]
User=root
Group=daemon
Environment=DB_PASSWORD=NOPASS
WorkingDirectory=/home/aci-mis-ai/faq-chatbot-combined/django_server/
ExecStart=/home/aci-mis-ai/faq-chatbot-combined/venv/bin/gunicorn \
          --access-logfile - \
          --workers 2 \
          --bind 0.0.0.0:5000 \
          conf.wsgi:application

[Install]
WantedBy=multi-user.target